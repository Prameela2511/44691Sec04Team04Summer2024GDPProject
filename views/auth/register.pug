extends ../layouts/layout

block styles 
    link(
        rel="stylesheet", 
        href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta21/dist/css/tabler.min.css"
    )

block content
    .page.page-center
        .container.container-tight.py-4
            .text-center.mb-4
                a.navbar-brand(href="/")
                    img(src="/images/logo.svg", alt="Personal Database Management", width="84")
            form.card.card-md(
                action="/register",
                method="POST"
                autocomplete="off"
            )
                .card-body
                    h2.card-title.text-center.mb-4  Create new account
                    if errors && errors.length !== 0            
                        .alert.alert-danger.text-start.mb-4
                            each error in errors
                                p.mb-0= error
                    .mb-3
                        label.form-label(for="name") Full Name
                        input.form-control(
                            type="text",
                            id="name",
                            name="name",
                            placeholder="Enter your full name",
                            value= defaults ? defaults.name : "",
                            required
                        )
                    .mb-3
                        label.form-label(for="email") Email address
                        input.form-control(
                            type="email",
                            id="email",
                            name="email",
                            placeholder="Enter your email",
                            value= defaults ? defaults.email : "",
                            required
                        )
                    .mb-3
                        label.form-label(for="password") Password
                        input.form-control(
                            type="password",
                            id="password",
                            name="password",
                            placeholder="Enter your password",
                            value= defaults ? defaults.password : "",
                            required
                        )
                    .form-footer
                        button.btn.btn-muted.w-100(type="submit") Create new account
            .text-center.text-secondary.mt-3
                | Already have an account? 
                a.link-muted(href="/") Login

block scripts 
  script(src="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta21/dist/js/tabler.min.js")